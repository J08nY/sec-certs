{% macro opt_line(name, key, obj, title) %}
    {% if key in obj and obj[key] %}
        <tr data-cs-name="{{ title }} - {{ name }}">
            <th scope="row">{{ name }}:</th>
            <td>{{ obj[key] }}</td>
        </tr>
    {% endif %}
{%- endmacro %}

