<!doctype html>
<html lang="en">

<head>
	{% block head %}
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="application-name" content="sec_certs" />
	<title>{{ title|default("seccerts.org")}}</title>
	<link rel="shortcut icon" href="{{ url_for('static', filename='favicon.ico') }}" />
	<link rel="stylesheet" href="{{ url_for('static', filename='bootstrap.min.css') }}">
	<link rel="stylesheet" href="{{ url_for('static', filename='fontawesome.min.css') }}">
	<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,300;0,400;0,600;0,700;1,300;1,400&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="{{ url_for('static', filename='base.css') }}">
	<script type="text/javascript" src="{{ url_for('static', filename='jquery.min.js') }}"></script>
	<script type="text/javascript" src="{{ url_for('static', filename='bootstrap.bundle.min.js') }}"></script>
	<script type="text/javascript" src="{{ url_for('static', filename='d3.min.js') }}"></script>
	{% endblock %}
</head>

<body>
	<div class="d-flex" id="wrapper">
		<div class="bg-light border-right" id="sidebar-wrapper">
			<div class="sidebar-heading"><img src="{{ url_for('static', filename='logo.svg') }}" alt="seccerts"/></div>
			<div class="list-group list-group-flush">
				<a href="{{ url_for('index') }}" class="list-group-item list-group-item-action bg-light">Index</a>
				<a href="{{ url_for('cc.index') }}" class="list-group-item list-group-item-action bg-light">Common Criteria</a>
				<a href="{{ url_for('fips.index') }}" class="list-group-item list-group-item-action bg-light">FIPS 140</a>
			</div>
			<div id="logo">
			<a href="https://crocs.fi.muni.cz">
				<img src="{{ url_for('static', filename='crocs_claim.svg') }}" alt="Centre for Research on Cryptography and Security"/>
			</a>
			</div>
		</div>
		<div id="page-content-wrapper">

			<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
				<button class="btn btn-secondary" id="menu-toggle">Toggle Menu</button>

				<button class="navbar-toggler" type="button" data-toggle="collapse"
					data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
					aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<!---
