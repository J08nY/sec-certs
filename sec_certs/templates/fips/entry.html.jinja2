{% extends "base.html.jinja2" %}
{% set active_page = "fips" %}
{% from "fips/utils.html.jinja2" import render_status, cryptography_keywords, device_keywords, security_keywords, other_keywords, render_type %}
{% from "utils.html.jinja2" import render_network %}
{% block title %}
    <title>
    {{ cert["module_name"]|default("") + " | seccerts.org" }}
    </title>
{% endblock %}
{% block navbar %}
    {{ super() }}
    <li class="nav-item">
        <a class="nav-link" href="#web-info">Webpage</a>
    </li>
    {% if "keywords" in cert %}
        <li class="nav-item">
            <a class="nav-link" href="#doc-info">Document</a>
        </li>
    {% endif %}
    <li class="nav-item">
        <a class="nav-link" href="#reference-graph">References</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#raw-data-head">Raw data</a>
    </li>
{% endblock %}
{% block content %}
	<h1>{{ cert["module_name"]|default("") }}</h1>
    <br/>
    <h2>Certificate #{{ cert["cert_id"] }}</h2>
	<div>
		<h2 id="web-info" class="mt-5">Webpage information
        <span style="font-size: 0.5em; vertical-align: middle" tabindex="0" class="badge badge-secondary" data-toggle="tooltip" data-placement="top" title="Information extracted from the NIST CMVP web page of the certificate.">?</span></h2>
        <b>Status:</b> {{ render_status(cert["status"]) }}<br/>
        {% if cert["historical_reason"] %}
            <b>Historical reason:</b> {{ cert["historical_reason"] }}<br/>
        {% endif %}
        <b>Validation dates:</b> {% for date in cert["date_validation"] %}{{ date }}{{ ", " if not loop.last else "" }}{% endfor %}<br/>
        {% if cert["date_sunset"] %}
            <b>Sunset date:</b>
            {% for date in cert["date_sunset"] %}{{ date }}{{ ", " if not loop.last else "" }}{% endfor %}<br/>
        {% endif %}
        <b>Standard:</b> {{ cert["standard"] }}<br/>
        <b>Security level:</b> {{ cert["level"] }}<br/>
        <b>Type:</b> {{ render_type(cert["type"]) }} {{ cert["type"] }}<br/>
        <b>Embodiment:</b> {{ cert["embodiment"] }}<br/>
        {% if cert["caveat"] %}
            <b>Caveat:</b>
            {{ cert["caveat"] }}
            <br/>
        {% endif %}
        {% if cert["exceptions"] %}
            <b>Exceptions:</b>
            {{ cert["exceptions"] }}
            <br/>
        {% endif %}
        {% if cert["description"] %}
            <b>Description:</b>
            {{ cert["description"] }}
            <br/>
        {% endif %}
        {% if cert["hw_versions"] %}
            <b>Version (Hardware):</b>
            {{ cert["hw_versions"] }}
            <br/>
        {% endif %}
        {% if cert["fw_versions"] %}
            <b>Version (Firmware):</b>
            {{ cert["fw_versions"] }}
            <br/>
        {% endif %}
        {% if cert["tested_conf"] %}
            <b>Tested configurations:</b>
            <ul>
                {% for conf in cert["tested_conf"] %}
                <li>{{ conf }}</li>
                {% endfor %}
            </ul>
        {% endif %}
        <b>Vendor:</b> {{ cert["vendor"] }} <a href="{{ cert['vendor_www'] }}" >{{ cert["vendor_www"] }}</a><br/>
        <b>Lab:</b> {{ cert["lab"] }} {% if cert["lab_nvlap"] %}(NVLAP Code: {{ cert["lab_nvlap"] }}){% endif %}<br/>
        {% if cert["algorithms"] %}
            <b>FIPS Algorithms:</b>
            <ul>
                {% for algo in cert["algorithms"] %}
                    {% if "Name" in algo %}
                        <li>{{ algo["Name"] }} - {% for name in algo["Certificate"] %}{{ name }}{{ ", " if not loop.last else "" }}{% endfor %}</li>
                    {% endif %}
                {% endfor %}
            </ul>
        {% endif %}

		<div class="mt-2 mb-2">
            {% if cert["certificate_www"] %}
            <a class="btn btn-primary" role="button" href="{{ cert['certificate_www'] }}" data-toggle="tooltip" data-placement="bottom" title="Certificate"><i class="fas fa-file-contract"></i> Certificate</a>
            {% endif %}
            {% if cert["security_policy_www"] %}
			<a class="btn btn-primary" role="button" href="{{ cert['security_policy_www'] }}" data-toggle="tooltip" data-placement="bottom" title="Security policy"><i class="fas fa-file-alt"></i> Security policy</a>
            {% endif %}
			<a class="btn btn-primary" role="button" href="https://csrc.nist.gov/projects/cryptographic-module-validation-program/certificate/{{ cert['cert_id'] }}" data-toggle="tooltip" data-placement="bottom" title="{{ cert['fips_module_name']|default('') }}"><i class="fas fa-external-link-alt"></i> Webpage</a>
		</div>
	</div>

	{% if "keywords" in cert %}
	<div>
		<h2 id="doc-info" class="mt-5">Document information
		<span style="font-size: 0.5em; vertical-align: middle" tabindex="0" class="badge badge-secondary" data-toggle="tooltip" data-placement="top" title="Information automatically extracted from the security policy document. Might contain errors.">?</span></h2>
		
		<h3 class="mt-4">Security policy
        {% if cert["security_policy_www"] %}<a role="button" href="{{ cert["security_policy_www"] }}" style="font-size: 0.4em; vertical-align: middle" tabindex="0" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Download."><i class="fas fa-fw fa-download"></i></a>{% endif %}</h3>
		{{ cryptography_keywords(cert["keywords"], "policy") }}
		{{ device_keywords(cert["keywords"], "policy") }}
		{{ security_keywords(cert["keywords"], "policy") }}
		{{ other_keywords(cert["keywords"], "policy") }}
	</div>
	{% endif %}

    <div class="mt-5 mb-5">
        <h2 class="anchor" id="reference-graph">References
		<span style="font-size: 0.5em; vertical-align: middle" tabindex="0" class="badge badge-secondary" data-toggle="tooltip" data-placement="top" title="Information automatically extracted from the certificate and security target documents. Might contain errors.">?</span></h2>
        <div class="border">
        {{ render_network(url_for('.entry_graph_json', hashid=hashid), url_for(".types"), height=400, linkDistance=45, linkCharge=-80, highlight=[hashid]) }}
        </div>
    </div>

	<div class="mt-5 mb-5">
		<h2 class="anchor" id="raw-data-head">Raw data
		<button id="raw-data-button" type="button" data-toggle="collapse" data-target="#raw-data" style="font-size: 0.4em; vertical-align: middle" tabindex="0" class="btn btn-primary" data-placement="top" title="Toggle."><i class="fas fa-fw fa-plus"></i></button>
		<a role="button" href="{{ url_for('.entry_json', hashid=hashid) }}" style="font-size: 0.4em; vertical-align: middle" tabindex="0" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Download."><i class="fas fa-fw fa-download"></i></a></h2>
		<pre id="raw-data" class="listing collapse mt-3"><code>{{ cert|tojson(indent=2) }}</code></pre>
	</div>
	<script>
        $(function () {
           $("#raw-data-button").tooltip();
        });
		$('#raw-data').on('show.bs.collapse', function () {
			$("#raw-data-button i").toggleClass("fa-plus").toggleClass("fa-minus");
		});
		$('#raw-data').on('hide.bs.collapse', function () {
			$("#raw-data-button i").toggleClass("fa-plus").toggleClass("fa-minus");
		});
	</script>
{% endblock %}